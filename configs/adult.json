{
    "dataset_name": "adult",
    "description": "UCI Adult Income dataset - Binary classification task",
    "target_column": "income",
    "task_type": "classification",
    "privacy_metrics": {
        "dcr_thresholds": [
            1e-6
        ],
        "k_anonymity": {
            "quasi_identifiers": [
                "age",
                "education",
                "occupation",
                "sex",
                "race"
            ],
            "k": 5
        }
    },
    "constraints": {
        "rules": [
            {
                "id": "age_education_consistency",
                "type": "expression",
                "expression": "(age >= 16) | (education == 'Preschool') | (education == '1st-4th') | (education == '5th-6th')",
                "description": "Age must be >= 16 for most education levels"
            },
            {
                "id": "capital_gain_loss_mutual_exclusivity",
                "type": "expression",
                "expression": "(capital_gain == 0) | (capital_loss == 0)",
                "description": "Capital gain and loss should not both be non-zero"
            },
            {
                "id": "hours_per_week_range",
                "type": "expression",
                "expression": "(hours_per_week >= 1) & (hours_per_week <= 99)",
                "description": "Hours per week should be reasonable"
            }
        ]
    },
    "notes": "Standard UCI Adult dataset with income prediction task. Focus on fairness across age, sex, and race."
}