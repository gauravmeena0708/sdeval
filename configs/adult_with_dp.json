{
    "dataset_name": "adult_with_dp",
    "description": "UCI Adult Income dataset with Differential Privacy metadata tracking",
    "target_column": "income",
    "task_type": "classification",
    "differential_privacy": {
        "enabled": true,
        "epsilon": 1.0,
        "delta": 1e-5,
        "mechanism": "Gaussian",
        "notes": "These are the DP parameters used during synthetic data generation"
    },
    "privacy_metrics": {
        "dcr_thresholds": [
            1e-6
        ],
        "k_anonymity": {
            "quasi_identifiers": [
                "age",
                "education",
                "occupation",
                "sex",
                "race"
            ],
            "k": 5
        }
    },
    "constraints": {
        "rules": [
            {
                "id": "age_range",
                "type": "expression",
                "expression": "(age >= 17) & (age <= 90)",
                "description": "Age should be within reasonable range"
            },
            {
                "id": "capital_mutual_exclusivity",
                "type": "expression",
                "expression": "(`capital.gain` == 0) | (`capital.loss` == 0)",
                "description": "Capital gain and loss should not both be non-zero"
            },
            {
                "id": "hours_per_week_range",
                "type": "expression",
                "expression": "(`hours.per.week` >= 1) & (`hours.per.week` <= 99)",
                "description": "Hours per week should be reasonable"
            }
        ]
    },
    "notes": "This config enables DP metadata tracking. The epsilon/delta values document the privacy budget used during data generation. Use this when you've applied DP mechanisms to your training data."
}